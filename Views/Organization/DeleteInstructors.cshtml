@model EduSubmit.Models.Instructor

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Delete Instructor</h2>

<p>Are you sure you want to delete this instructor?</p>

<table class="table">
    <tr>
        <th>Instructor ID:</th>
        <td>@Model.InstructorId</td>
    </tr>
    <tr>
        <th>Full Name:</th>
        <td>@Model.FirstName @Model.LastName</td>
    </tr>
    <tr>
        <th>Email:</th>
        <td>@Model.EmailAddress</td>
    </tr>
    <tr>
        <th>Organization:</th>
        <td>@(Model.Organization?.OrganizationName ?? "N/A")</td>
    </tr>
</table>

<form asp-action="DeleteInstructorConfirmed" method="post">
    <input type="hidden" asp-for="InstructorId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="ManageInstructors" class="btn btn-secondary">Cancel</a>
</form>
