@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mb-4">Dashboard Overview</h2>

<div class="row">
    <div class="col-lg-3 col-md-6 mb-4">
        <div class="card p-4 shadow-sm text-center">
            <h5 class="text-primary">Total Students</h5>
            <p class="fs-4 fw-bold">@ViewBag.TotalStudents</p>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 mb-4">
        <div class="card p-4 shadow-sm text-center">
            <h5 class="text-success">Active Teachers</h5>
            <p class="fs-4 fw-bold">@ViewBag.ActiveTeachers</p>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 mb-4">
        <div class="card p-4 shadow-sm text-center">
            <h5 class="text-warning">Total Classes</h5>
            <p class="fs-4 fw-bold">@ViewBag.TotalClasses</p>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 mb-4">
        <div class="card p-4 shadow-sm text-center">
            <h5 class="text-danger">Submissions</h5>
            <p class="fs-4 fw-bold">@ViewBag.Submissions</p>
        </div>
    </div>
</div>

<style>
    h2 {
        text-align: center;
        font-weight: bold;
        color: #343a40;
    }

    .card {
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        text-align: center;
        background: white;
        transition: transform 0.2s;
    }




        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.15);
        }


</style>