@model EduSubmit.Models.Student

@{
    ViewData["Title"] = "Delete Student";
}

<h2>Delete Student</h2>
<p>Are you sure you want to delete this student?</p>

<div>
    <h4>@Model.FirstName @Model.LastName</h4>
    <p>Email: @Model.EmailAddress</p>
    <p>Class: @Model.ClassId</p>
</div>

<form asp-action="DeleteStudentConfirmed" method="post">
    <input type="hidden" asp-for="StudentId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Page1" class="btn btn-secondary">Cancel</a>
</form>
