



@model EduSubmit.Models.Student

@{
    ViewData["Title"] = "Delete Student";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Ensure the layout is specified
}

<div class="container mt-5">
    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white">
            <h2 class="mb-0">Delete Student</h2>
        </div>
        <div class="card-body">
            <div class="alert alert-warning" role="alert">
                <i class="bi bi-exclamation-triangle me-2"></i>
                Are you sure you want to delete this student? This action cannot be undone.
            </div>

            <div class="mb-4">
                <h4 class="text-dark">@Model.FirstName @Model.LastName</h4>
                <p class="mb-1"><strong>Email:</strong> @Model.EmailAddress</p>
                <p class="mb-1"><strong>Class:</strong> @Model.ClassId</p>
            </div>

            <form asp-action="DeleteStudentConfirmed" method="post">
                <input type="hidden" asp-for="StudentId" />
                <div class="d-flex justify-content-between align-items-center">
                    <button type="submit" class="btn btn-danger px-4">
                        <i class="bi bi-trash me-2"></i>Delete
                    </button>
                    <a asp-action="ManageUsers" class="btn btn-outline-secondary px-4">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .card {
        max-width: 600px;
        margin: 0 auto;
    }

    .card-header {
        border-bottom: 2px solid rgba(255,255,255,0.2);
    }

    .alert {
        background-color: #fff3cd;
        border-color: #ffeeba;
        color: #856404;
        padding: 1rem;
        border-radius: 0.375rem;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
        padding: 0.5rem 1.5rem;
        transition: all 0.3s ease;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
            transform: translateY(-1px);
        }

    .btn-outline-secondary {
        padding: 0.5rem 1.5rem;
        transition: all 0.3s ease;
    }

        .btn-outline-secondary:hover {
            transform: translateY(-1px);
        }

    h4 {
        color: #333;
        font-weight: 600;
    }

    p {
        color: #555;
    }

    strong {
        color: #333;
    }
</style>