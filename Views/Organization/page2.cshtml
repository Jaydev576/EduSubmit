@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }

        .sidebar {
            width: 250px;
            height: 100vh;
            position: fixed;
            background: #fff;
            padding: 20px;
            box-shadow: 2px 0 5px rgba(0,0,0,0.1);
        }

            .sidebar .nav-link {
                color: #6c757d;
                font-weight: bold;
            }

                .sidebar .nav-link.active {
                    color: #6f42c1;
                    background: rgba(111, 66, 193, 0.1);
                }

        .content {
            margin-left: 260px;
            padding: 20px;
        }

        /* .search-bar { */
        /*     width: 100%; */
        /*     max-width: 400px; */
        /* } */

        .status-active {
            color: green;
            font-weight: bold;
            background: #e6ffe6;
            padding: 5px 10px;
            border-radius: 10px;
        }

        .status-inactive {
            color: red;
            font-weight: bold;
            background: #ffe6e6;
            padding: 5px 10px;
            border-radius: 10px;
        }
    </style>
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
       

        <!-- Main Content -->
        <div class="content">
            <div class="d-flex justify-content-end align-items-center">
                @* <input type="text" class="form-control search-bar" placeholder="Search users, classes..."> *@
                <div>
                    <button class="btn btn-primary">+ Create New Class</button>
                    <span class="badge bg-light text-dark p-2"> <i class="fas fa-user"></i> Admin User</span>
                </div>
            </div>

            <h3 class="mt-4">Manage Classes</h3>

            <div class="card p-3">
                <input type="text" class="form-control mb-3" placeholder="Search classes...">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>CLASS NAME</th>
                            <th>TEACHER</th>
                            <th>STUDENTS</th>
                            <th>ACTIONS</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Advanced Mathematics</td>
                            <td>Dr. Alice Cooper</td>
                            <td><i class="fas fa-user"></i> 45</td>
                            <td><i class="fas fa-ellipsis-v"></i></td>
                        </tr>
                        <tr>
                            <td>Computer Science 101</td>
                            <td>Prof. Bob Wilson</td>
                            <td><i class="fas fa-user"></i> 32</td>
                            <td><i class="fas fa-ellipsis-v"></i></td>
                        </tr>
                        <tr>
                            <td>Physics Lab</td>
                            <td>Dr. Carol Smith</td>
                            <td><i class="fas fa-user"></i> 28</td>
                            <td><i class="fas fa-ellipsis-v"></i></td>
                        </tr>
                    </tbody>
                </table>
                <div class="d-flex justify-content-between">
                    <span>Showing 1 to 3 of 3 entries</span>
                    <div>
                        <button class="btn btn-light">Previous</button>
                        <button class="btn btn-light">Next</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
