@model EduSubmit.Models.Class

@{
    ViewData["Title"] = "Delete Class";
}

<h2>Delete Class</h2>
<h3>Are you sure you want to delete this class?</h3>

<div>
    <h4>Class Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Class Name:</dt>
        <dd class="col-sm-10">@Model.ClassName</dd>

        <dt class="col-sm-2">Organization:</dt>
        <dd class="col-sm-10">@ViewBag.OrganizationName</dd>
    </dl>

    <form asp-action="DeleteClass" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="ClassId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="page2" class="btn btn-secondary">Cancel</a>
    </form>
</div>