@model EduSubmit.Models.Class

@{
    ViewData["Title"] = "Edit Class";
}

<h2>Edit Class</h2>

<form asp-action="EditClass" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="ClassId" />

    <div class="form-group">
        <label asp-for="ClassName"></label>
        <input asp-for="ClassName" class="form-control" required />
        <span asp-validation-for="ClassName" class="text-danger"></span>
    </div>

    @* <div class="form-group"> *@
    @*     <label asp-for="OrganizationId"></label> *@
    @*     <select asp-for="OrganizationId" asp-items="ViewBag.Organizations" class="form-control"> *@
    @*         <option value="">-- Select Organization --</option> *@
    @*     </select> *@
    @*     <span asp-validation-for="OrganizationId" class="text-danger"></span> *@
    @* </div> *@

    <div class="form-group">
        <label>Organization</label>
        <input class="form-control" value="@ViewBag.OrganizationName" readonly /> <!-- Display Org Name -->
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
