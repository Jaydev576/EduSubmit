@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_RegisterLayout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white text-center">
            <h2 class="mb-0">Register</h2>
        </div>
        <div class="card-body">
            <!-- Role Selection -->
            <div class="btn-group d-flex mb-4" role="group">
                <button type="button" class="btn btn-primary active" id="studentBtn">
                    <i class="bi bi-person me-2"></i>Student
                </button>
                <button type="button" class="btn btn-secondary" id="instructorBtn">
                    <i class="bi bi-person-gear me-2"></i>Instructor
                </button>
                <button type="button" class="btn btn-secondary" id="adminBtn">
                    <i class="bi bi-shield-lock me-2"></i>Admin
                </button>
            </div>

            <!-- Student Form -->
            <div id="studentForm">
                <form asp-action="RegisterStudent" asp-controller="Register" method="post">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">First Name</label>
                            <input type="text" class="form-control" name="FirstName" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Last Name</label>
                            <input type="text" class="form-control" name="LastName" required />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Email</label>
                        <input type="email" class="form-control" name="EmailAddress" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Password</label>
                        <input type="password" class="form-control" name="Password" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Date of Birth</label>
                        <input type="date" class="form-control" name="DateOfBirth" required />
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="OrganizationId" class="form-label fw-bold">Organization</label>
                            <select name="OrganizationId" id="OrganizationId" class="form-control" asp-items="ViewBag.Organizations" required>
                                <option value="">-- Select Organization --</option>
                            </select>
                            <span name="OrganizationId" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="ClassId" class="form-label fw-bold">Class</label>
                            <select name="ClassId" id="ClassId" class="form-control" asp-items="ViewBag.Classes" required>
                                <option value="">-- Select Class --</option>
                            </select>
                            <span name="ClassId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <button type="submit" class="btn btn-success px-4">
                            <i class="bi bi-person-plus me-2"></i>Register as Student
                        </button>
                        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary px-4">Cancel</a>
                    </div>
                </form>
            </div>

            <!-- Instructor Form -->
            <div id="instructorForm" class="d-none">
                <form asp-action="RegisterInstructor" asp-controller="Register" method="post">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">First Name</label>
                            <input type="text" class="form-control" name="FirstName" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Last Name</label>
                            <input type="text" class="form-control" name="LastName" required />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Email</label>
                        <input type="email" class="form-control" name="EmailAddress" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Password</label>
                        <input type="password" class="form-control" name="Password" required />
                    </div>
                    <div class="mb-3">
                        <label for="OrganizationId" class="form-label fw-bold">Organization</label>
                        <select name="OrganizationId" id="OrganizationId" class="form-control" asp-items="ViewBag.Organizations" required>
                            <option value="">-- Select Organization --</option>
                        </select>
                        <span name="OrganizationId" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <button type="submit" class="btn btn-success px-4">
                            <i class="bi bi-person-plus me-2"></i>Register as Instructor
                        </button>
                        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary px-4">Cancel</a>
                    </div>
                </form>
            </div>

            <!-- Admin Form -->
            <div id="adminForm" class="d-none">
                <form asp-action="RegisterAdmin" asp-controller="Register" method="post">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Organization Name</label>
                        <input type="text" class="form-control" name="OrganizationName" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Username</label>
                        <input type="text" class="form-control" name="Username" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Email</label>
                        <input type="email" class="form-control" name="EmailAddress" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Password</label>
                        <input type="password" class="form-control" name="Password" required />
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <button type="submit" class="btn btn-success px-4">
                            <i class="bi bi-person-plus me-2"></i>Register as Admin
                        </button>
                        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary px-4">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        max-width: 800px;
        margin: 0 auto;
        border: none;
    }

    .card-header {
        border-bottom: 2px solid rgba(255,255,255,0.2);
    }

    .btn-group .btn {
        transition: all 0.3s ease;
        padding: 0.75rem 1.5rem;
        font-weight: 500;
    }

    .btn-group .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-group .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

    .btn-group .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

        .btn-group .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }

    .form-label {
        color: #333;
        margin-bottom: 0.5rem;
    }

    .form-control, .form-select {
        border-radius: 0.375rem;
        transition: border-color 0.2s ease-in-out;
    }

        .form-control:focus, .form-select:focus {
            border-color: #007bff;
            box-shadow: 0 0 0 0.2rem rgba(0,123,255,0.25);
        }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
        padding: 0.5rem 1.5rem;
        transition: all 0.3s ease;
    }

        .btn-success:hover {
            background-color: #218838;
            border-color: #1e7e34;
            transform: translateY(-1px);
        }

    .btn-outline-secondary {
        padding: 0.5rem 1.5rem;
        transition: all 0.3s ease;
    }

        .btn-outline-secondary:hover {
            transform: translateY(-1px);
        }

    .text-danger {
        font-size: 0.875rem;
        margin-top: 0.25rem;
    }
</style>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const studentBtn = document.getElementById("studentBtn");
            const instructorBtn = document.getElementById("instructorBtn");
            const adminBtn = document.getElementById("adminBtn");

            const studentForm = document.getElementById("studentForm");
            const instructorForm = document.getElementById("instructorForm");
            const adminForm = document.getElementById("adminForm");

            function showForm(selectedBtn, formToShow) {
                studentBtn.classList.remove("btn-primary", "active");
                studentBtn.classList.add("btn-secondary");
                instructorBtn.classList.remove("btn-primary", "active");
                instructorBtn.classList.add("btn-secondary");
                adminBtn.classList.remove("btn-primary", "active");
                adminBtn.classList.add("btn-secondary");

                selectedBtn.classList.remove("btn-secondary");
                selectedBtn.classList.add("btn-primary", "active");

                studentForm.classList.add("d-none");
                instructorForm.classList.add("d-none");
                adminForm.classList.add("d-none");

                formToShow.classList.remove("d-none");
            }

            studentBtn.addEventListener("click", () => showForm(studentBtn, studentForm));
            instructorBtn.addEventListener("click", () => showForm(instructorBtn, instructorForm));
            adminBtn.addEventListener("click", () => showForm(adminBtn, adminForm));
        });
    </script>
}