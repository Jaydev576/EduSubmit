            </div>
            <div class="card-body p-4 text-left">
                <!-- Display Message (Success/Error) -->
                @if (!string.IsNullOrEmpty(ViewBag.Message))
                {
                    <div id="messageBox" class="alert @(ViewBag.IsSuccess ? "alert-success" : "alert-danger") alert-dismissible fade show mb-3 rounded-2" role="alert" style="font-size: 0.9rem;">
                        <i class="@(ViewBag.IsSuccess ? "bi bi-check-circle-fill" : "bi bi-exclamation-triangle-fill") me-2" style="font-size: 1rem;"></i>
                        <strong>@ViewBag.Message</strong>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close" style="font-size: 0.7rem;"></button>
                    </div>
                }

                <!-- Form -->
                <form asp-action="ChangePassword" asp-controller="Account" method="post" class="needs-validation" novalidate>
                    <div class="mb-3">
                        <label for="EmailAddress" class="form-label text-muted fw-semibold" style="font-size: 0.95rem; color: #6c757d;">Email Address</label>
                        <div class="input-group">
                            <span class="input-group-text bg-transparent border-0" style="color: #adb5bd;"><i class="bi bi-envelope-fill" style="font-size: 1rem;"></i></span>
                            <input type="email" class="form-control border-0 rounded-2" id="EmailAddress" name="EmailAddress" value="@Model?.EmailAddress" placeholder="Enter your email" required style="padding: 10px 12px; font-size: 0.95rem;" />
                        </div>
                        <div class="invalid-feedback" style="font-size: 0.85rem;">Please enter a valid email address.</div>
                    </div>
                    <div class="mb-3">
                        <label for="OldPassword" class="form-label text-muted fw-semibold" style="font-size: 0.95rem; color: #6c757d;">Current Password</label>
                        <div class="input-group">
                            <span class="input-group-text bg-transparent border-0" style="color: #adb5bd;"><i class="bi bi-lock-fill" style="font-size: 1rem;"></i></span>
                            <input type="password" class="form-control border-0 rounded-2" id="OldPassword" name="OldPassword" placeholder="Enter current password" required style="padding: 10px 12px; font-size: 0.95rem;" />
                        </div>
                        <div class="invalid-feedback" style="font-size: 0.85rem;">Please enter your current password.</div>
                    </div>
                    <div class="mb-3">
                        <label for="NewPassword" class="form-label text-muted fw-semibold" style="font-size: 0.95rem; color: #6c757d;">New Password</label>
                        <div class="input-group">
                            <span class="input-group-text bg-transparent border-0" style="color: #adb5bd;"><i class="bi bi-lock-fill" style="font-size: 1rem;"></i></span>
                            <input type="password" class="form-control border-0 rounded-2" id="NewPassword" name="NewPassword" placeholder="Enter new password" required style="padding: 10px 12px; font-size: 0.95rem;" />
                        </div>
                        <div class="invalid-feedback" style="font-size: 0.85rem;">Please enter a new password.</div>
                    </div>
                    <div class="mb-4">
                        <label for="ConfirmPassword" class="form-label text-muted fw-semibold" style="font-size: 0.95rem; color: #6c757d;">Confirm Password</label>
                        <div class="input-group">
                            <span class="input-group-text bg-transparent border-0" style="color: #adb5bd;"><i class="bi bi-lock-fill" style="font-size: 1rem;"></i></span>
                            <input type="password" class="form-control border-0 rounded-2" id="ConfirmPassword" name="ConfirmPassword" placeholder="Confirm new password" required style="padding: 10px 12px; font-size: 0.95rem;" />
                        </div>
                        <div class="invalid-feedback" style="font-size: 0.85rem;">Passwords do not match.</div>
                    </div>
                    <button type="submit" class="btn btn-custom-purple w-100 rounded-3 py-2 mb-3" style="background: linear-gradient(135deg, #6a11cb, #9f44d3); color: #fff; font-size: 1rem; font-weight: 600;">
                        <i class="bi bi-check-circle-fill me-2" style="font-size: 1rem;"></i> Change Password
                    </button>
                </form>

                <!-- Navigation Buttons -->
                <div class="d-flex justify-content-between">
                    <a href="@Url.Action("Login", "Account")" class="btn btn-outline-secondary rounded-3 py-2" style="color: #6c757d; border-color: #6c757d; font-size: 0.9rem; padding: 6px 12px;">
                        <i class="bi bi-arrow-left me-2" style="font-size: 0.9rem;"></i> Back to Login
                    </a>
                    @* <a href="@Url.Action("ForgotPassword", "Account")" class="btn btn-warning rounded-3 py-2" style="background-color: #f4a261; color: #fff; font-size: 0.9rem; padding: 6px 12px;"> *@
                    @*     Forgot Password? *@
                    @* </a> *@
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
    <script>
        // Bootstrap validation
        (function () {
            'use strict';
            var forms = document.querySelectorAll('.needs-validation');
            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();

        // Auto-hide Message after 5 seconds
        setTimeout(function () {
            var alert = document.getElementById('messageBox');
            if (alert) {
                alert.style.transition = 'opacity 0.5s ease';
                alert.style.opacity = '0';
                setTimeout(() => alert.style.display = 'none', 500);
            }
        }, 5000);
    </script>
</body>
</html>