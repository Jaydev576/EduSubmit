@model EduSubmit.Models.Submission

@{
    ViewData["Title"] = "Submissions";
    ViewData["ActivePage"] = "Submissions";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}

<h2>Edit Submission</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" asp-controller="Submission" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="AssignmentId" />
            <input type="hidden" asp-for="StudentId" />

            <div class="form-group">
                <label asp-for="Assignment.Title" class="control-label">Assignment</label>
                <input type="text" class="form-control" value="@Model.Assignment?.Title" readonly />
            </div>

            <div class="form-group">
                <label asp-for="SubmissionDate" class="control-label">Submission Date</label>
                <input asp-for="SubmissionDate" class="form-control" readonly />
            </div>

            <div class="form-group">
                <label class="control-label">Current File</label>
                @if (!string.IsNullOrEmpty(Model.FilePath)) {
                    <div>
                        <a href="@(Model.FilePath?.ToString())" target="_blank" class="btn btn-info btn-sm">View Current File</a>
                    </div>
                }
                else {
                    <p class="text-muted">No file uploaded.</p>
                }
            </div>

            <div class="form-group">
                <label class="control-label">Upload New File (Optional)</label>
                <input type="file" name="newFile" class="form-control" />
                <small class="text-muted">Uploading a new file will replace the current one.</small>
            </div>

            <div class="form-group mt-3">
                <button asp-action="Edit" asp-controller="Submission" type="submit" class="btn btn-success">Save Changes</button>
                <a asp-action="Submissions" asp-controller="Student" class="btn btn-secondary">Cancel</a>
            </div>
        </form>

    </div>
</div>