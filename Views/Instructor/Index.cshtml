

@{
    Layout = "~/Views/Shared/_InstructorLayout.cshtml";
    ViewData["Title"] = "Dashboard";
    ViewData["ActivePage"] = "Index";
    var classPerformance = ViewData["ClassPerformance"] as Dictionary<string, Tuple<int, double, int, int>>;
    var activeAssignments = ViewData["ActiveAssignments"] as Dictionary<string, List<dynamic>>;
}

<!-- Class Performance Section -->
<section class="class-performance container-fluid">
    <h2 class="section-title">📊 Class Performance</h2>
    <div class="table-container table-responsive">
        <table class="performance-table table table-bordered">
            <thead>
                <tr>
                    <th>Class Name</th>
                    <th>Total Assignments</th>
                    <th>Average Grade</th>
                    <th>Total Students</th>
                    <th>Submission Rate</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in classPerformance)
                {
                    <tr>
                        <td>@item.Key</td>
                        <td>@item.Value.Item1</td>
                        <td>@item.Value.Item2.ToString("F1")</td>
                        <td>@item.Value.Item3</td>
                        <td>@item.Value.Item4%</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>

<!-- Active Assignments Section -->
<section class="active-assignments container-fluid">
    <h2 class="section-title">📝 Active Assignments</h2>

    @foreach (var classEntry in activeAssignments)
    {
        <h3 class="class-heading">@classEntry.Key</h3>

        <div class="assignment-container d-flex flex-nowrap overflow-auto gap-3 pb-3">
            @foreach (var assignment in classEntry.Value)
            {
                <div class="assignment-card flex-shrink-0">
                    <h4>@assignment.Title</h4>
                    <p><i class="fas fa-calendar-alt"></i> <strong>Due:</strong> @assignment.DueDate.ToString("dd MMM yyyy")</p>
                    <p><i class="fas fa-file-upload"></i> <strong>Submissions:</strong> @assignment.SubmissionCount</p>
                </div>
            }
        </div>
    }
</section>


<!-- Styles -->
<style>
    /* General Page Styles */
    body {
        font-family: 'Poppins', sans-serif;
        background: #f4f6f9;
        color: #333;
    }

    .dashboard-title {
        text-align: center;
        font-size: 2.5rem;
        font-weight: bold;
        margin-bottom: 20px;
        color: #444;
        text-transform: uppercase;
    }

    .section-title {
        font-size: 2rem;
        font-weight: bold;
        color: #333;
        margin: 20px 0;
        border-bottom: 3px solid #6e8efb;
        display: inline-block;
        padding-bottom: 5px;
    }

    /* Class Performance Table */
    .table-container {
        width: 100%;
        overflow-x: auto;
        margin: 20px 0;
        padding: 10px;
    }

    .performance-table {
        width: 100%;
        border-collapse: collapse;
        background: white;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

        .performance-table thead {
            background: #6e8efb;
            color: white;
        }

        .performance-table th, .performance-table td {
            padding: 12px 15px;
            text-align: center;
            border-bottom: 1px solid #ddd;
        }

        .performance-table th {
            font-size: 1.1rem;
        }

        .performance-table tbody tr:nth-child(even) {
            background: #f9f9f9;
        }

        .performance-table tbody tr:hover {
            background: #e6e9ff;
            transition: 0.3s ease-in-out;
        }

    /* Active Assignments Section */
    .class-heading {
        font-size: 1.5rem;
        font-weight: bold;
        margin: 10px 0;
        color: #444;
    }

    .assignment-container {
        display: flex;
        flex-wrap: nowrap;
        overflow-x: auto;
        gap: 15px;
        padding: 10px;
        scrollbar-width: thin;
        scrollbar-color: #888 #f8f9fa;
    }

        .assignment-container::-webkit-scrollbar {
            height: 8px;
        }

        .assignment-container::-webkit-scrollbar-thumb {
            background-color: #888;
            border-radius: 4px;
        }

        .assignment-container::-webkit-scrollbar-track {
            background: #f8f9fa;
        }

    .assignment-card {
        background: linear-gradient(135deg, #6e8efb, #a777e3);
        color: white;
        border-radius: 12px;
        padding: 20px;
        min-width: 280px;
        box-shadow: 4px 4px 10px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease-in-out;
    }

        .assignment-card:hover {
            transform: scale(1.05);
        }

        .assignment-card h4 {
            margin-bottom: 10px;
            font-size: 1.2em;
        }

        .assignment-card p {
            margin: 5px 0;
            font-size: 0.95em;
            display: flex;
            align-items: center;
            gap: 5px;
        }

        .assignment-card i {
            font-size: 1.2em;
        }
</style>

<!-- FontAwesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
