@{
    Layout = "~/Views/Shared/_InstructorLayout.cshtml";
    ViewData["Title"] = "Help & Support";
    ViewData["ActivePage"] = "HelpSupport";
}


<div class="container mt-4">
    <h3 class="text-center">Frequently Asked Questions</h3>
    <div class="accordion" id="faqAccordion">
        @for (int i = 1; i <= 10; i++)
        {
            <div class="accordion-item">
                <h2 class="accordion-header" id="faq@(i)">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faqContent@(i)">
                        @GetFaqQuestion(i)
                    </button>
                </h2>
                <div id="faqContent@(i)" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                    <div class="accordion-body">
                        @GetFaqAnswer(i)
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@functions {
    string GetFaqQuestion(int index)
    {
        var questions = new[]
        {
            "How do I navigate the Dashboard?",
            "How do I create a new assignment?",
            "How can I view student submissions?",
            "How do I grade submitted assignments?",
            "How do I track student progress?",
            "Can I edit an assignment after creating it?",
            "How do I delete an assignment?",
            "How do I view a student's performance history?",
            "How can I download submitted assignments?",
            "Where can I see graded submissions?"
        };
        return questions[index - 1];
    }

    string GetFaqAnswer(int index)
    {
        var answers = new[]
        {
            "The dashboard provides an overview of assignments, submissions, and student performance.",
            "Go to 'Assignments', click 'Create Assignment', and fill in the required details.",
            "Navigate to 'Student Submissions' to see submitted assignments for each class.",
            "Open a submitted assignment from 'Student Submissions', provide feedback, and enter a grade.",
            "Visit 'Student Progress' to track completion rates and performance trends.",
            "Yes, click on an assignment in 'Assignments' and select 'Edit' to modify details.",
            "Go to 'Assignments', select an assignment, and choose the 'Delete' option.",
            "Go to 'Student Progress', select a student, and view their performance history.",
            "Navigate to 'Student Submissions' and click on a submission to download it.",
            "Go to 'Graded Submissions' to view assignments that have been graded."
        };
        return answers[index - 1];
    }
}

<style>
    h3 {
        font-weight: 600;
        color: #212529;
        border-bottom: 3px solid #6e8efb;
        display: inline-block;
        padding-bottom: 5px;
    }
</style>