<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/admin-style.css" />
    <style>
        .nav-link {
            color: #000;
            transition: background-color 0.3s ease;
        }

            .nav-link:hover {
                background-color: #e0e0e0;
            }

            .nav-link.active {
                background-color: #007bff !important;
                color: white !important;
            }
    </style>
</head>
<body>
    <!-- Header Section -->
    <header class="navbar navbar-expand-lg navbar-light bg-light shadow-sm px-4">
        <a class="navbar-brand" asp-action="Index" asp-controller="Home">EduSubmit</a>
        <div class="ms-auto d-flex align-items-center">
            <span class="me-2">Hello, @User.Identity?.Name</span>
            <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center" style="width: 40px; height: 40px; font-weight: bold;">
                @User.Identity?.Name?.Substring(0, 1).ToUpper()
            </div>
        </div>
    </header>

    <div class="d-flex">
        <!-- Sidebar -->
        <nav class="bg-light p-3 vh-100" style="width: 250px;">
            <ul class="nav flex-column">
                <li class="nav-item"><a href="/Organization/index" class="nav-link">Dashboard</a></li>
                <li class="nav-item"><a href="/Organization/ManageUsers" class="nav-link">Manage Students</a></li>
                <li class="nav-item"><a href="/Organization/ManageClasses" class="nav-link">Manage Classes</a></li>
                <li class="nav-item"><a href="/Organization/ManageTeachers" class="nav-link">Manage Teachers</a></li>

            </ul>
        </nav>

        <!-- Main Content -->
        <div class="flex-grow-1 p-4">
            @RenderBody()
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Admin Panel - <a href="/Account/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
