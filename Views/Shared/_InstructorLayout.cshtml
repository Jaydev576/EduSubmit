<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>EduSubmit - Instructor Dashboard</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha384-TzFt5N1he0Dw59/z4yY2Z1k4Hn8y4h+G+Xv9D3N9hCw5+gN6j6Vcz4UicG0aOBal1" crossorigin="anonymous">
    <style>
        .nav-link {
            color: #000;
            transition: background-color 0.3s ease;
        }

            .nav-link:hover {
                background-color: #e0e0e0;
            }

            .nav-link.active {
                background-color: #007bff !important;
                color: white !important;
            }
    </style>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>

    <header class="navbar navbar-expand-lg navbar-light bg-light shadow-sm px-4">
        <a class="navbar-brand" href="@Url.Action("Index","Home")">EduSubmit</a>
        <div class="ms-auto d-flex align-items-center">
            <span class="me-2">Hello, @User.Identity?.Name</span>
            <div class="btn-group">
                <button type="button" class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center" style="width: 40px; height: 40px; font-weight: bold;"
                        data-bs-toggle="dropdown">
                    @User.Identity?.Name?.Substring(0, 1).ToUpper()
                </button>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li><a class="dropdown-item" href="/Account/Logout">Logout</a></li>
                </ul>
            </div>
        </div>
    </header>

    <div class="d-flex">
        <!-- Sidebar -->
        <div class="bg-light border-end vh-100 p-3" id="sidebar-wrapper">
            <div class="list-group list-group-flush">
                <a href="@Url.Action("Index", "Instructor")" class="list-group-item list-group-item-action @(ViewData["ActivePage"] == "Index" ? "active" : "")">Dashboard</a>
                <a href="@Url.Action("Assignments", "Instructor")" class="list-group-item list-group-item-action @(ViewData["ActivePage"] == "Assignments" ? "active" : "")">Assignments</a>

                <a href="@Url.Action("Submissions", "Instructor")" class="list-group-item list-group-item-action @(ViewData["ActivePage"] == "Submissions" ? "active" : "")">Student Submissions</a>
                <a href="@Url.Action("GradedSubmissions", "Instructor")" class="list-group-item list-group-item-action @(ViewData["ActivePage"] == "GradedSubmissions" ? "active" : "")">Graded Submissions</a>


                <a href="@Url.Action("StudentProgress", "Instructor")" class="list-group-item list-group-item-action @(ViewData["ActivePage"] == "StudentProgress" ? "active" : "")">Student Progress</a>
                @* <a href="@Url.Action("Announcements", "Instructor")" class="list-group-item list-group-item-action">Announcements</a> *@
                @* <a href="@Url.Action("Messages", "Instructor")" class="list-group-item list-group-item-action">Messages</a> *@
                @* <a href="@Url.Action("ReportsAnalytics", "Instructor")" class="list-group-item list-group-item-action">Reports & Analytics</a> *@
                @* <a href="@Url.Action("Settings", "Instructor")" class="list-group-item list-group-item-action">Settings</a> *@
                <a href="@Url.Action("HelpSupport", "Instructor")" class="list-group-item list-group-item-action @(ViewData["ActivePage"] == "HelpSupport" ? "active" : "")">Help & Support</a>
            </div>
        </div>

        <!-- Page Content -->
        <div class="container-fluid p-4">
            @RenderBody()
        </div>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
