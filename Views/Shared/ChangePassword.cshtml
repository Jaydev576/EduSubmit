@model EduSubmit.Models.Student

@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Views/Shared/_Layout.cshtml"; // or your correct path if different
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
            <h2 class="mb-0 fw-bold">Change Password</h2>
        </div>
        <div class="card-body p-4">
            <!-- Display Message (Success/Error) -->
            @if (!string.IsNullOrEmpty(ViewBag.Message))
            {
                <div id="messageBox" class="alert @(ViewBag.IsSuccess ? "alert-success" : "alert-danger") alert-dismissible fade show" role="alert">
                    <strong>@ViewBag.Message</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <form asp-action="ChangePassword" asp-controller="Account" method="post" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label class="form-label fw-semibold">Email Address</label>
                    <input type="email" class="form-control shadow-sm" name="EmailAddress" required />
                </div>
                <div class="mb-3">
                    <label class="form-label fw-semibold">Old Password</label>
                    <input type="password" class="form-control shadow-sm" name="OldPassword" required />
                </div>
                <div class="mb-3">
                    <label class="form-label fw-semibold">New Password</label>
                    <input type="password" class="form-control shadow-sm" name="NewPassword" required />
                </div>
                <div class="mb-3">
                    <label class="form-label fw-semibold">Confirm Password</label>
                    <input type="password" class="form-control shadow-sm" name="ConfirmPassword" required />
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-success shadow-sm px-4">
                        <i class="bi bi-check-circle me-2"></i> Submit
                    </button>
                </div>
            </form>

            <!-- Back to Login Button -->
            <div class="text-center mt-3">
                <a href="@Url.Action("Login", "Account")" class="btn btn-secondary shadow-sm px-4">
                    <i class="bi bi-arrow-left me-2"></i> Back to Login
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Auto-hide Message after 5 seconds -->
<script>
    setTimeout(function () {
        var alert = document.getElementById('messageBox');
        if (alert) {
            alert.style.display = 'none';
        }
    }, 5000);
</script>
