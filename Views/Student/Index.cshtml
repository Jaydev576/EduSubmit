@{
    ViewData["Title"] = "Index";
    ViewData["ActivePage"] = "Dashboard";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";

    var recentAssignments = ViewBag.RecentAssignments as List<dynamic>;
}

<div class="container mt-4">
    <div class="row">
        <!-- Stats Cards -->
        <div class="col-md-4">
            <div class="card border-0 shadow-sm p-3">
                <h5>Pending Assignments</h5>
                <h3 class="text-warning">@ViewBag.PendingAssignments</h3>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm p-3">
                <h5>Submitted</h5>
                <h3 class="text-success">@ViewBag.SubmittedAssignments</h3>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm p-3">
                <h5>Overall Grade</h5>
                <h3 class="text-primary">@ViewBag.OverallGrade.ToString("0.00")%</h3>
            </div>
        </div>
    </div>

    <!-- Recent Assignments -->
    <div class="mt-4">
        <h4>Recent Assignments</h4>
        <div class="list-group">
            @if (recentAssignments != null && recentAssignments.Any()) {
                @foreach (var assignment in recentAssignments) {
                    <a href="@Url.Action("Details", "Assignment", new { id = assignment.Id })" class="list-group-item list-group-item-action">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1">@assignment.Title</h5>
                            <small class="text-muted">@assignment.DueDate.ToString("yyyy-MM-dd")</small>
                        </div>
                        <p class="mb-1">@assignment.Description</p>
                        <span class="badge @(assignment.Status == "Active" ? "bg-warning" : "bg-success") float-end">@assignment.Status</span>
                    </a>
                }
            }
            else {
                <p class="text-muted">No recent assignments available.</p>
            }
        </div>
    </div>


</div>